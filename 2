<body>
  <h2>Aceita namorar cmg?</h2>
  <button id="sim">SIM</button>
  <button id="nao">N√ÉO</button>

  <script>
    const naoBtn = document.getElementById('nao');

    function moveButton() {
      const x = Math.random() * (window.innerWidth - 100);
      const y = Math.random() * (window.innerHeight - 100);
      naoBtn.style.left = `${x}px`;
      naoBtn.style.top = `${y}px`;
    }

    // Fugir no desktop
    naoBtn.addEventListener('mouseenter', moveButton);

    // Fugir no mobile (ao tentar clicar)
    naoBtn.addEventListener('touchstart', function (e) {
      e.preventDefault(); // Evita o clique acontecer antes de fugir
      moveButton();
    });
  </script>
</body>
